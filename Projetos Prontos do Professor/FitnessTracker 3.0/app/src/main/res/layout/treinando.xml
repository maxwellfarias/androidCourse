<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    width x height
    wrap_content -> ajusta com o conteudo
    match_parent -> equivale ao tamanho do pai
    0dp -> usar as constraints (aplica)

    posicoes
    usamos
    layout_constraintEnd_toEndOf
    layout_constraintTop_toTopOf
    layout_constraintStart_toStartOf
    layout_constraintEnd_toStartOf
    layout_constraintStart_toEndOf
    -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:text="Primeiro Nome asdad sd asad asdadjasdas ajsdakjsd as jaskdasda sdas dasd asdasd asdjhasd ajsd asdasd askdasd as dasd asd assad askdasda jsdasda sdas"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>