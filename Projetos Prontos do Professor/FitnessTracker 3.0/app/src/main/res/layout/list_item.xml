<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmls="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_item_list"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
    <!--

    -->

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/img_directions_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_directions_run_24"/>

    <TextView
        android:id="@+id/healthy_status"
        android:layout_width="100dp"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        xmls:text="Severamente abaixo do peso"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/img_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_calendar_today_24" />

    <TextView
        android:id="@+id/text_date"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        xmls:text="04/07/2021 10:47" />



</LinearLayout>
